<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="row">

        <div class="col-md-5">
  <tbody>

    <% @products.each do |product| %>
      <tr>
         <!-- <div class="col-md-7">
          <a href="#">
              <img class="img-responsive" src="#" alt="">
          </a> HERE WE HAVE CODE THAT PUTS IN A PHOTO-->
        </div> </td>
        <td><h3><%= product.name %></h3></td>
        <td><p><%= product.description %></p></td>
        <td><h4><%= product.formatted_price %>/hour</h4></td>
        <td><a class="btn btn-primary" <%= link_to 'Show', product %> </td>
        <td><a class="btn btn-primary" <%= link_to 'Edit', edit_product_path(product) %> </td>
        <td><a class="btn btn-primary" <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</div>
</div>

</table>

